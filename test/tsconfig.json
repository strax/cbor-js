{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "outDir": "target",
    "charset": "utf-8",
    "esModuleInterop": true,
    "newLine": "lf",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "useDefineForClassFields": true,
    "types": ["node", "jest"]
  },
  "include": ["./**/*.ts"]
}
